<h1>SendIt Scorecards!</h1>
<a href="/scorecards/new">Add a new scorecard</a><br><br>

<table class="table table-hover table-dark">
  <thead>
    <tr>
      <th scope="col">Username</th>
      <th scope="col">Date</th>
      <th scope="col">Course Name</th>
      <th scope="col">Strokes</th>
      <th scope="col">Score</th>
    </tr>
  </thead>
  <tbody>
    <% @scorecard.each do |card| %>
        <tr>
            <th scope="row"><%= card.user.username%></th>
            <td><%= card.date %></td>
            <td><a href="/scorecards/<%=card.id%>"><%= card.course_name %></a></td>
            <td><%= card.strokes %></td>
            <td><%= card.score %></td>
        </tr>
     <% end %>
  </tbody>
</table>