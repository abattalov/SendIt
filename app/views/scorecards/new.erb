<h1>Create a new Scorecard</h1>

<form method="POST" action="/scorecards">
    <label for="Course Name">Course Name</label>
    <input type="text" name="course_name"><br><br>

    <label for="strokes">Strokes</label>
    <input type="integer" name="strokes"><br><br>

    <label for="score">Score</label>
    <input type="integer" name="score"><br><br>

    <label for="date">Date</label>
    <input type="text" name="date"><br><br>
    <input type="submit">
</form>