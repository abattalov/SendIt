<h1>Edit the scorecard</h1>

<form action="/scorecards/<%=@scorecard.id%>" method="POST">

<input type="hidden" id="hidden" name="_method" value="PATCH">

<label for="Course Name">Course Name</label>
<input type="text" name="course_name" value="<%=@scorecard.course_name%>"><br><br>

<label for="strokes">Strokes</label>
<input type="integer" name="strokes" value="<%=@scorecard.strokes%>"><br><br>

<label for="score">Score</label>
<input type="integer" name="score" value="<%=@scorecard.score%>"><br><br>

<label for="date">Date</label>
<input type="text" name="date" value="<%=@scorecard.date%>"><br><br>
<input type="submit" value="Update">




</form>