<h1><%= @user.name %>'s Scorecards</h1>

<table class="table table-hover table-dark">
  <thead>
    <tr>
      <th scope="col">Date</th>
      <th scope="col">Course Name</th>
      <th scope="col">Strokes</th>
      <th scope="col">Score</th>
    </tr>
  </thead>
  <tbody>
    <% @user.scorecards.each do |card| %>
        <tr>
            <th scope="row"><%= card.date %></th>
            <td><a href="/scorecards/<%=card.id%>"><%= card.course_name %></a></td>
            <td><%= card.strokes %></td>
            <td><%= card.score %></td>
        </tr>
     <% end %>
  </tbody>
</table>

